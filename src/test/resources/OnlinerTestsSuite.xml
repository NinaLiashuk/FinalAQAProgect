<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Parallel Testing Suite" parallel="tests" thread-count="4">
    <test name="Parallel Tests chrome" parallel="classes">
        <parameter name="browser" value="chrome"/>
        <parameter name="remote" value="false"/>
        <classes>
            <class name="com.it_academy.page_object.testNg.OnlinerHeaderPageTest"/>
        </classes>
    </test>
    <test name="Parallel Tests firefox" parallel="classes">
        <parameter name="browser" value="firefox"/>
        <parameter name="remote" value="false"/>
        <classes>
            <class name="com.it_academy.page_object.testNg.OnlinerCatalogPageTest"/>
        </classes>
    </test>
    <test name="API tests" parallel="classes">
        <classes>
            <class name="com.it_academy.rest_api.APITest"/>
        </classes>
    </test>
</suite>
